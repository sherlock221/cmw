<!DOCTYPE html>
<html>
<head lang="zh-cn">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta content="
        width=device-width,
        initial-scale=1.0,
        minimum-scale=1.0,
        maximum-scale=1.0,user-scalable=no" name="viewport" id="viewport">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <title>知了-理解源自沟通</title>
    <script type="text/javascript">

        var iosUrl = "https://itunes.apple.com/cn/app/id948591472?mt=8";
        var androidUrl = "http://imzhiliao.com/zhiliao.apk";
            var treasure = "http://a.app.qq.com/o/simple.jsp?pkgname=com.cicada.cicada";

        var ua = window.navigator.userAgent.toLowerCase();

        var checkMobile = function () {

            if (navigator.userAgent.match(/iPhone|iPad|iPod/i)) {
                return "iOS";
            }
            else if (navigator.userAgent.match(/Android/i)) {
               return "Android";
            }
            else{
                return "other";
            }
        };


        var checkTx = function(){
            if (ua.indexOf("qq/") > -1) {
                return {"message": "qq", "type": "tx"}
            }
            else if (ua.match(/MicroMessenger/i) == 'micromessenger') {
                return {"message": "micromessenger", "type": "tx"}
            }
            else {
                return {"message" : "other" , type : "other"}
            }
        }

        var mobile = checkMobile();
        var txObj = checkTx();

            if (txObj.type == "tx") {
                window.location.href = treasure;
            }
            else if (mobile == "iOS") {
                window.location.href = iosUrl;
            }
            else if (mobile == "Android") {
                window.location.href = androidUrl;
            }
            else {
                alert("请在手机上打开!");
            }

    </script>
</head>
</html>